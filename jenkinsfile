pipeline {
    agent any
    environment {
        CI = true
            }
    stages {
        stage('Build') {
            steps {
                script {
                    echo 'Building WebdriverIO'
                    bat 'npm install'
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    echo 'Testing WebdriverIO'
                    bat 'npx wdio run wdio.conf.ts'

                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    echo 'Deploying Hello World'
                }
            }
        }
    }

}
